<style>
  /* Custom styles */
  .dropdown .content {
    display: none;
    position: absolute;
    min-width: 100px;
    /* Ensure dropdown appears above other content */
  }

  .dropdown:hover .content,
  .dropdown:focus-within .content {
    display: block;
  }

  .mobile-menu {
    display: none;
  }

  /* Media query for mobile menu */
  @media (max-width: 768px) {
    .mobile-menu {
      display: block;
    }
  }
</style>

