<!-- Mobile menu -->
<div id="mobile-menu" class="mobile-menu md:hidden hidden bg-blue-400">
  <a href="#" class="block py-2 px-4 text-black">Home</a>
  <div class="dropdown relative">
    <button class="block py-2 px-4 text-black relative">Dropdown</button>
    <div class="content block z-0 w-screen bg-blue-100">
      <a href="#" class="block px-4 py-2 font-semibold text-xl text-black hover:bg-blue-500">Item 1</a>
      <a href="#" class="block px-4 py-2 font-semibold text-xl text-black hover:bg-blue-500">Item 2</a>
      <a href="#" class="block px-4 py-2 font-semibold text-xl text-black hover:bg-blue-500">Item 3</a>
    </div>
  </div>
  <a href="#" class="block py-2 px-4 text-black">About</a>
</div>

<script>
  document.getElementById("menu-toggle").addEventListener("click", function() {
    var mobileMenu = document.getElementById("mobile-menu");
    if (mobileMenu.classList.contains("hidden")) {
      mobileMenu.classList.remove("hidden");
      // Add event listener to handle clicks outside the menu
      document.addEventListener("click", closeMobileMenu);
    } else {
      mobileMenu.classList.add("hidden");
      // Remove event listener when menu is closed
      document.removeEventListener("click", closeMobileMenu);
    }
  });

  function closeMobileMenu(event) {
    var mobileMenu = document.getElementById("mobile-menu");
    var menuToggle = document.getElementById("menu-toggle");
    // Close menu if clicked outside the mobile menu or the menu toggle button
    if (!mobileMenu.contains(event.target) && event.target !== menuToggle) {
      mobileMenu.classList.add("hidden");
      document.removeEventListener("click", closeMobileMenu);
    }
  }
</script>
